</head>
<!--Main site-->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/users/create" class="border-shadow">
                <span class="text-gradient"> New  User<i class="fa fa-user" aria-hidden="true"></i>
                </span>
            </a>

            <a href="/watchlist/create" class="border-shadow">
                <span class="text-gradient"> New  Watchlist<i class="fa fa-list" aria-hidden= "true"></i>
                </span>
            </a>
            <a href="/movie/create" class="border-shadow">
                <span class="text-gradient"> New  Movie<i class="fa fa-film" aria-hidden="true"></i>
                </span>
            </a>
        </div>
        <script>
            // Utilisez JavaScript pour récupérer les données d'utilisateur du serveur
            fetch('/users/all')
              .then(response => response.text())
              .then(data => {
                // Insérez les données d'utilisateur dans la page HTML
                document.getElementById('userList').innerHTML = data;
              });
          </script>
      
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                         <th>@Email</th> 
                    </tr>
                </thead>
                <tbody id="userList">
                    <tr>
                        <td>1</td>
                        <td>username</td>
                        <td>example@gmail.com</td>
                        <td>
                            <a href="#" class="btn-border-shadow update">
                                <span class="text-gradient"><i class="fas fa-pencil"></i></span>
                            </a>
                            <a class="btn-border-shadow delete">
                                <span class="text-gradient"><i class="fas fa-times"></i></span>
                            </a>
                        </td>
                    </tr>
                </tbody>
                
            </table>
        </form>
    </div>
